<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
	<servlet>
		<servlet-name>JdbcServlet</servlet-name>
		<servlet-class>
			de.rubeen.javaee.buch.onlineshop.JdbcServlet
		</servlet-class>
		<init-param>
			<param-name>jdbc_properties</param-name>
			<param-value>/WEB-INF/jdbc.properties</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>JdbcServlet</servlet-name>
		<url-pattern>/db_settings</url-pattern>
	</servlet-mapping>


	<filter>
		<description>Logging at some accesses</description>
		<filter-name>LoggingFilter</filter-name>
		<filter-class>de.rubeen.javaee.buch.onlineshop.filter.LoggingFilter</filter-class>
	</filter>
	<filter>
		<description>Access with code only</description>
		<filter-name>SecurityFilter</filter-name>
		<filter-class>de.rubeen.javaee.buch.onlineshop.filter.SecurityFilter</filter-class>
	</filter>
	<filter>
		<filter-name>IsSecureLoggerFilter</filter-name>
		<filter-class>de.rubeen.javaee.buch.onlineshop.filter.IsSecureLoggerFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>LoggingFilter</filter-name>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-name>SellServlet</servlet-name>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SecurityFilter</filter-name>
		<servlet-name>RegisterServlet</servlet-name>
	</filter-mapping>
	<filter-mapping>
		<filter-name>LoggingFilter</filter-name>
		<url-pattern>/index.html</url-pattern>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>
</web-app>